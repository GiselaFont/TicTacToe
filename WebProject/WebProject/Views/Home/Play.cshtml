@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using WebProject.Models
@model TicTacToeViewModel

<div class="about">
    <h4>Play with us!</h4>
  
    <button id="toggle1">New Game</button>
    <br />
    <br />
    <form method="post" action="~/Home/Play">
        <div id="hidden1" style="display:none;">
            @foreach (var tables in Model.Table)
            {

                <table border="1" height="100" width="100">
                    <tr>
                        <td id="cell11">@tables.cell11</td>
                        <td id="cell12">@tables.cell12</td>
                        <td id="cell13">@tables.cell13</td>
                    </tr>
                    <tr>
                        <td id="cell21">@tables.cell21</td>
                        <td id="cell22">@tables.cell22</td>
                        <td id="cell23">@tables.cell23</td>
                    </tr>
                    <tr>
                        <td id="cell31">@tables.cell31</td>
                        <td id="cell32">@tables.cell32</td>
                        <td id="cell33">@tables.cell33</td>
                    </tr>
                </table>

            }
            <input type="submit" />
        </div>
    </form>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {

            var x = false;
            $('#toggle1').click(function () {
                $('#hidden1').toggle();
            });

            $('td').click(function () {
                if (!$(this).html()) {
                    if (x == false) {
                        $(this).text("X");
                        x = true;
                    }
                    else {
                        $(this).text("O");
                        x = false;
                    }
                }

                var cellValues = [{
                    "cell11" : $("#cell11").html(), 
                    "cell12" : $("#cell12").html(), 
                    "cell13" : $("#cell13").html(),
                    "cell21" : $("#cell21").html(), 
                    "cell22" : $("#cell22").html(), 
                    "cell23" : $("#cell23").html(),
                    "cell31" : $("#cell31").html(), 
                    "cell32" : $("#cell32").html(), 
                    "cell33" : $("#cell33").html()}];

                $.ajax({
                    url: "@Url.Action("Play")",
                    type: "POST",
                    data: JSON.stringify(cellValues),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    error: function (response) {
                        alert(response.responseText);
                    },
                    success: function (response) {
                        alert(response);
                    }
                });

            });

        });
        
    </script>
}
