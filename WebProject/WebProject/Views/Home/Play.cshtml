@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using WebProject.Models
@model TicTacToeViewModel

<div class="about">
    <h4>Play with us!</h4>
  
    <button id="toggle1">New Game</button>
    <br />
    <br />
    <form method="post" action="~/Home/Play">
        <div id="hidden1" style="display:none;">
            @foreach (var tables in Model.Table)
            {

                <table border="1" height="100" width="100">
                    <tr>
                        <td id="cell11">@tables.cell11</td>
                        <td>@tables.cell12</td>
                        <td>@tables.cell13</td>
                    </tr>
                    <tr>
                        <td>@tables.cell21</td>
                        <td>@tables.cell22</td>
                        <td>@tables.cell23</td>
                    </tr>
                    <tr>
                        <td>@tables.cell31</td>
                        <td>@tables.cell32</td>
                        <td>@tables.cell33</td>
                    </tr>
                </table>

            }
            <input type="submit" />
        </div>
    </form>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {

            var x = false;
            $('#toggle1').click(function () {
                $('#hidden1').toggle();
            });

            $('td').click(function () {
                if (!$(this).html()) {
                    if (x == false) {
                        $(this).text("X");
                        x = true;
                    }
                    else {
                        $(this).text("O");
                        x = false;
                    }
                }

            });

        });
        
    </script>
}
